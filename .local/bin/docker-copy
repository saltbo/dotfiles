#!python3
import os
import fire


def hello(image, target, discard_ns=False, local=False):
    new_image = image
    if discard_ns:
        new_image = os.path.basename(image)

    new_image = "{}/{}".format(target, new_image)

    print("{} ==> {}".format(image, new_image))
    os.system("docker pull {}".format(image))
    os.system("docker tag {} {}".format(image, new_image))
    if not local:
        os.system("docker push {}".format(new_image))


if __name__ == '__main__':
    fire.Fire(hello)
