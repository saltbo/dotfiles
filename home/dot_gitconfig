[core]
	excludesfile = /Users/saltbo/.gitignore_global
[init]
	defaultBranch = master
[pull]
	rebase = true 
[push]
	autoSetupRemote = true
[gpg]
    program = gpg
[commit]
	gpgsign = true
	template = /Users/saltbo/.stCommitMsg
